@import "../_variables.styl";

/* Session section styles */
section#sessions, section#workshop-list
  .section-header
    margin-bottom: 50px

  .talk-bracket
    margin-bottom: 20px
    text-align: center
    border-bottom: 1px solid colGreen
    margin-bottom: 20px
    padding-bottom: 20px
    @media lg
      margin-bottom: 40px
      padding-bottom: 40px

  .talk-details
    text-align: left
    position: relative
    min-height: 250px
    .talk-title
      font-weight: 700
      display: block
      margin-bottom: 20px
    .talk-tags
      height: 50px
      width: 100%
      .talk-tag
        font-size: 14px
        background-color: colGreen
        color: white
        display: inline-block
        margin: 5px
        border-radius: 3px
        padding: 5px 10px
    .talk-description
      display: block
      margin-bottom: 60px
    // .talk-length
    //   display: block
    //   position: absolute
    //   bottom: 0
  .talk-speaker
    margin: 10px 0
    min-height: 250px
    @media lg
      margin: 15px 0
    .speaker-photo
      height: 180px
      margin: 0px auto 15px
    .speaker-title
      min-height: 30px
      display: inline

@import "../_variables.styl";

#speakerModal
  font-family: "nerislight", Helvetica, Arial, sans-serif
  text-align: center
  .modal-content
    border: none
    border-radius: 3px
  .modal-header
    background-color: colGreen
    .speaker-photo
      margin-top: 20px
      margin-bottom: 20px
      @media lg
        margin-top: 50px
        margin-bottom: 35px
    .speaker-title
      margin-bottom: 10px
      @media lg
        margin-bottom: 30px
  .modal-body
    padding: 25px 40px
    font-size: 20px
    @media lg
      padding: 45px 80px
  .modal-footer
    border: none
    text-align: center
    width: 100%
    padding: 0px 50px 30px
    @media lg
      padding: 0px 150px 65px
    .social-icon svg
      height: 30px
      margin: 15px auto
      display: block
      .cls-1
        fill: colGreen

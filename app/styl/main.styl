@import '../assets/webfonts/fonts.css';
@import 'variables.styl'

html,
body
  margin 0
  padding 0
  width 100%
  height 100%

// VARIABLES

// GLOBAL STYLES
.green-button
  width 150px
  height 50px
  text-align center
  padding 13px 25px
  background-color colGreen
  color white
  font-family 'nerissemibold', sans-serif
  font-size 16px
  transition background-color 0.3s ease
  &:hover, &:active, &:focus
    background-color #7CC900
    text-decoration none
    color white


#background-image
  background-image url("../img/bg-02.jpg")
  min-height 100%
  -moz-background-size cover
  -webkit-background-size cover
  background-size cover
  background-position top center
  background-repeat no-repeat
  position relative
  img
    width 90%
    max-width 600px
    height auto
    position absolute
    top -20%
    bottom 0
    left 0
    right 0
    margin auto
  a
    position absolute
    top 250px
    bottom 0
    left 0
    right 0
    margin auto
  span
    font-family 'Roboto Condensed'
    color white
    font-size 22px

@import '../assets/webfonts/fonts.css';
@import 'variables.styl'
@import 'global.styl'
@import 'footer.styl'

html,
body
  margin 0
  padding 0
  width 100%
  height 100%
body
  font-family "nerislight", Helvetica, Arial, sans-serif
  font-size 16px


//menu bar styles
#main-menu
  position fixed
  top 0
  left 0
  right 0
  z-index 1000
  background-color #FFF
  height 70px
  text-align center
  padding 10px 0
  border-bottom 4px solid colGreen


//main banner styles
smMainBannerHeight = 100vh

#background-cover
  background-color #000000
  height smMainBannerHeight
  width 100%
  position absolute
  top 0
  z-index 100
  opacity 0

#background-image
  height smMainBannerHeight
  background-image url("../img/bg-02.jpg")
  background-color #000000
  height smMainBannerHeight
  -moz-background-size cover
  -webkit-background-size cover
  background-size cover
  background-position top center
  background-repeat no-repeat
  position relative
  @media sm
    background-position top right
  @media md
    background-position 0% 30%

  img
    width 90%
    max-width 550px
    height auto
    position absolute
    top 25%
    left 0
    right 0
    margin auto
    @media sm
      max-width 600px
      top 30%
    @media md
      max-width 700px
      top 25%

  #conference-timer
    color colWhite
    position absolute
    left 0
    right 0
    width 100%
    bottom 20%
    text-align center
    font-size 52px
    font-family 'Roboto Condensed', sans-serif
    font-weight 300
    @media sm
      font-size 62px
    @media md
      font-size 70px
    .countdown-fld
      display inline-block
      margin-right 20px
      span
        font-size 16px
        text-align center

  // setup for small horizontal screens
  @media only screen and (max-height: 768px) and (orientation: landscape)
    img
      width 50%
      top 27%
      right initial
      left 30px
      padding 20px 0
    #conference-timer
      width 45%
      left initial
      top 36%
      font-size 38px
      .countdown-fld
        margin-right 15px

//about section styles
#about-section
  background-color colLight
  color colDark
  @media md
    min-height 35vh

  .when-where
    margin 20px auto 0
    max-width 315px
    display table
    img
      width 40px
      margin-right 20px
      display table-cell
      vertical-align middle
    p
      display table-cell
      vertical-align middle
    &.empty
      width 315px
      p
        width 100%
    @media xs
      max-width 340px
    @media md
      margin-top 20px
      max-width 350px
      float right
      &.empty
        float left



#prev-year-recap-section
  background-color colWhite
  color colDark

  #youtube-iframe
    border none
    margin 10px auto
    display block
    @media md
      width 560px !important
      height 349px !important

#be-part-of-it
  background-color colGreen
  color colWhite
  text-align center

  img
    width 80px
    height auto
    margin-top 50px
    margin-bottom 20px
  .section-paragraph
    width 280px

#sponsor-us-section
  background-color colLight
  color colDark

#contact-section
  background-color colGreen
  color colWhite

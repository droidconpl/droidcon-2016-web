@import '../assets/webfonts/fonts.css';
@import 'variables.styl'

html,
body
  margin 0
  padding 0
  width 100%
  height 100%
body
  font-family "nerislight", Helvetica, Arial, sans-serif
  font-size 16px

// GLOBAL STYLES
.section
  padding-top 20px
  padding-bottom 40px
  font-family "nerislight", Helvetica, Arial, sans-serif
  font-size 16px
  @media md
    font-size 18px

.section-title
  text-align center
  margin-bottom 30px
  h2.main-title
    font-weight 500
    font-family "nerisblack", Helvetica, Arial, sans-serif
    font-size 25px

.section-subtitle
  text-align center
  font-family "nerisblack", Helvetica, Arial, sans-serif
  font-size 20px

.section-paragraph
  max-width 320px
  margin 0 auto
  text-align center
  @media md
    max-width 420px

.float-right
  float right
.float-left
  float left

.link
  text-decoration underline
  color inherit
  &:hover
    color inherit

.green-button
  width 150px
  height 50px
  text-align center
  padding 13px 25px
  background-color colGreen
  color white
  font-family 'nerissemibold', sans-serif
  font-size 16px
  transition background-color 0.3s ease
  border none
  &:hover, &:active, &:focus
    background-color #7CC900
    text-decoration none
    color white

// MAIN PAGE STYLES

//menu bar styles
#main-menu
  position fixed
  top 0
  left 0
  right 0
  z-index 1000
  background-color #FFF
  height 70px
  text-align center
  padding 10px 0
  border-bottom 4px solid colGreen


//main banner styles
smMainBannerHeight = 500px

#background-cover
  background-color #000000
  height smMainBannerHeight
  width 100%
  position absolute
  top 0
  z-index 1000
  opacity 0

#background-image
  background-image url("../img/bg-02.jpg")
  background-color #000000
  height smMainBannerHeight
  -moz-background-size cover
  -webkit-background-size cover
  background-size cover
  background-position top center
  background-repeat no-repeat
  position relative
  -moz-box-shadow 0px 6px 10px #000
  -webkit-box-shadow 0px 6px 10px #000
  box-shadow 0px 2px 10px #000
  @media sm
    background-position top right
  @media md
    background-position 0% 30%

  img
    width 90%
    max-width 550px
    height auto
    position absolute
    top 60px
    left 0
    right 0
    margin auto
    @media sm
      max-width 600px
    @media md
      max-width 700px

  #conference-timer
    color colWhite
    position absolute
    left 0
    right 0
    width 100%
    bottom 50px
    text-align center
    font-size 50px
    font-family 'Roboto Condensed', sans-serif
    font-weight 300

#background-cover,
#background-image
  @media sm
    height (smMainBannerHeight + 100px)
  @media md
    min-height 65vh

//about section styles
#about-section
  background-color colLight
  color colDark
  @media md
    min-height 35vh

  .when-where
    margin 20px auto 0
    max-width 315px
    display table
    img
      width 40px
      margin-right 20px
      display table-cell
      vertical-align middle
    p
      display table-cell
      vertical-align middle
    &.empty
      width 315px
      p
        width 100%
    @media md
      margin-top 20px
      max-width 350px
      float right
      &.empty
        float left



#prev-year-recap-section
  background-color colWhite
  color colDark

  #youtube-iframe
    border none
    margin 0 auto
    display block

#be-part-of-it
  background-color colGreen
  color colWhite
  text-align center

  img
    width 80px
    height auto
    margin-top 50px
    margin-bottom 20px
  .section-paragraph
    width 280px

#sponsor-us-section
  background-color colLight
  color colDark

#contact-section
  background-color colGreen
  color colWhite